<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
                android:background="@drawable/white_grey_bottom_bar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20px"
            android:background="@drawable/ic_right_menu_fragment"
            android:id="@+id/rightNavigationMenuImageButton"/>

        <ImageButton
            android:id="@+id/addGoalImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:background="@drawable/ic_add_goal_fragment"
            android:onClick="addValue"/>

</RelativeLayout>


    </merge>